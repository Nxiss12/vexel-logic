# Environment variables for missed-call-bot
# Do NOT commit secrets. Copy this file to .env and fill in values.

# App
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://vexellogic.com
BACKEND_URL=https://api.vexellogic.com

# Auth
JWT_SECRET=your_jwt_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
ADMIN_EMAIL=admin@vexellogic.com
ADMIN_PASSWORD=changeme

# Supabase (optional; if set, data will be saved to Supabase)
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_KEY=your-supabase-service-role-key
DATABASE_URL=postgres://user:pass@host:5432/dbname

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxx
TWILIO_PHONE_NUMBER=+44XXXXXXXXX
TWILIO_WEBHOOK_SECRET=twilio-webhook-secret

# Email (SendGrid)
SENDGRID_API_KEY=SG.xxxxxx

# Monitoring
SENTRY_DSN=

# Other
LOG_LEVEL=info

